  "author": {
    "name": "Metal Selector Pro Team",
    "email": "support@metal-selector.com",
    "url": "https://metal-selector.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/metal-selector/metal-selector-pro.git"
  },
  "homepage": "https://metal-selector.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "pwa:analyze": "npx @web/pwa-analyzer dist",
    "pwa:validate": "npx @web/pwa-validate dist",
    "clean": "rimraf dist node_modules/.cache",
    "preinstall": "npx only-allow pnpm"
  },
