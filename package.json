{
  "name": "metal-selector-pro",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Professional-grade steel and alloy selection platform for engineers, metallurgists, and material scientists. Advanced AI-powered recommendations with comprehensive material databases.",
  "keywords": [
    "material-science",
    "steel-selection",
    "metallurgy",
    "alloy-design",
    "engineering-materials",
    "pwa",
    "react",
    "typescript",
    "ai-powered",
    "aerospace-materials",
    "automotive-steel",
    "marine-alloys",
    "construction-materials"
